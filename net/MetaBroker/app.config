<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
			<section name="log4net" type="System.Configuration.IgnoreSectionHandler"/>
	 </configSections>
	
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2"/>
	</startup>
	<!-- log4Net configuration -->
	<log4net>
			<appender name="LogFileAppender" type="log4net.Appender.FileAppender">
				<file value="MetaBroker.log"/>
				<appendToFile value="false"/>
				<layout type="log4net.Layout.PatternLayout">
			<header value="[Startup]
"/>
			<footer value="[Shutdown]"/>
					<conversionPattern value="%date [%thread] %-5level - %message%newline"/>
				</layout>
			</appender>
			<root>
				<!-- In Release should have another log level, e.g. Info -->
				<level value="All"/>
				<appender-ref ref="LogFileAppender"/>
			</root>
	</log4net>
	<!-- custom trace listener using log4net -->
	<system.diagnostics>
			<trace autoflush="true">
				<listeners>
					<add name="Log4NetTraceListener" type="MetaBroker.Log4NetTraceListener, MetaBroker"/>
				</listeners>
			</trace>
	</system.diagnostics>
</configuration>
